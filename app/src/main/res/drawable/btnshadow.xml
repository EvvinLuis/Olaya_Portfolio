<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent shadow color -->
            <corners android:radius="4dp"/>
            <padding
                android:left="0dp"
                android:top="2dp"
                android:right="0dp"
                android:bottom="2dp"/>
        </shape>
    </item>
    <!-- Button background layer -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#43b8d9"/> <!-- Button background color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list>
